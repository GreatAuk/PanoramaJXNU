
@{
    Layout = null;
}
@model PanoramaJXNU.Model.Admins
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="shortcut icon" href="~/Areas/Admin/Content/img/favicon.ico">
    <link href="~/Areas/Admin/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/css/new.css" rel="stylesheet" />
    <link href="~/Areas/Admin/Content/fonts/font-awesome.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Main Container start -->

    <div class="dashboard-container">

        <div class="container">

            <!-- Row Start -->
            <div class="row">
                <div class="col-lg-4 col-md-4 col-md-offset-4">
                    <div class="sign-in-container">
                        <form action="/adminlogin/check" class="login-wrapper" method="post">
                            <div class="header">
                                <div class="row">
                                    <div class="col-md-12 col-lg-12">
                                        <h3>Login<img src="~/Areas/Admin/Content/img/logo1.png" alt="Logo" class="pull-right"></h3>
                                        <p>Fill out the form below to login.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="content">

                                <div class="form-group">
                                    <label for="userName">User Name</label>
                                    @*<input type="text" class="form-control" id="userName" placeholder="User Name">*@
                                    @Html.TextBoxFor(c => c.UserName, new { @class = "form-control", placeholder = "User Name" })
                                    @*因为class可能有冲突，所以要加@*@
                                </div>
                                <div class="form-group">
                                    <label for="Password1">Password</label>
                                    @* <input type="password" class="form-control" id="Password1" placeholder="Password">*@
                                    @Html.PasswordFor(c => c.PassWords, new { @class = "form-control", placeholder = "Password" })
                                </div>

                            </div>
                            <div class="actions">
                                <input class="btn btn-danger" name="Login" type="submit" value="Login">
                                <a class="link" href="#">Forgot Password?</a>
                                <div class="clearfix"></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Row End -->

        </div>
    </div>

    <!-- Main Container end -->
    <script src="~/Areas/Admin/Content/js/jquery.js"></script>
    <script src="~/Areas/Admin/Content/js/bootstrap.min.js"></script>
</body>

</html>
