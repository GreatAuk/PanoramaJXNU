            function send() {
                $("#send").click(function () {
                    $.post(
                        '/LeaveMsg/Send',
                        { content: $("#msgcontent").val(), receiver: $("#messageTo").attr("receiver") },
                        function (data) {
                            $('#myModal').modal('hide');
                            $("#alert1").removeAttr("hidden");   //弹出提示框
                            var t = setTimeout('$("#alert1").prop("hidden", "hidden");', 3000)  //4秒后提示框消失
                        }
                    )

                });
