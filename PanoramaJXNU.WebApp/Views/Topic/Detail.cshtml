                            $("#focusCount").text("关注：" + data.split(";")[5].split(":")[1])
                            $("#fsCount").text("粉丝：" + data.split(";")[6].split(":")[1])
                            $("#signature").text("签名：" + data.split(";")[7].split(":")[1])

                        }
                    )
                    $("#Div").css("display", "inline");
                });
