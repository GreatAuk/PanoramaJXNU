@using PanoramaJXNU.Model
@model PanoramaJXNU.Model.Topic
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section top1{
    <link href="~/Content/Topic/css/main5152.css" rel="stylesheet" />
    <style type="text/css">
        #QuickReply {
            float: right;
            margin-top: 5px;
        }

        hr {
            border-top-color: #421C1C;
            margin-top: 2px;
        }

        blockquote {
            padding: 10px 10px 10px 60px;
            margin-bottom:10px;
        }

        .media-body .post-meta {
            margin-bottom: 2px;
            margin-top: 15px;
        }

        .panel {
            margin-top: 20px;
        }

        .post-meta .btn {
            float: right;
        }

        .txt .btn {
            float: right;
            margin-top: 5px;
            margin-right: 5px;
        }

        .alert {
            width: 200px;
            position: fixed;
            bottom: 20px;
            right: 10px;
        }

        #alert1 {
            width: 200px;
            position: fixed;
            bottom: 20px;
            right: 10px;
        }

        #alert2 {
            width: 200px;
            position: fixed;
            bottom: 20px;
            right: 10px;
        }
        #alert3 {
            width: 200px;
            position: fixed;
            bottom: 20px;
            right: 10px;
        }
